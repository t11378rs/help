<li id="<%= feed_item.id %>">
  <%= link_to gravatar_for(feed_item.user), feed_item.user %>
    <span class="user">
      <%= link_to feed_item.user.name, feed_item.user %>
    </span>
    <span class="title">
      <%=link_to feed_item.title, feed_item %>
    </span>
    <span class="reward">謝礼：<%= feed_item.reward %></span>
    <span class="catch_image"><%= image_tag feed_item.image_url, :size => '400x800'%></span>
    <span class="desired_time">希望時間：<%= feed_item.desired_time %></span>
    <span class="desired_place">希望場所：<%= feed_item.desired_place %></span>
    <span class="detail">詳細：<br><%= feed_item.detail %></span>
    <span class="timestamp">
      Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
    </span>
  <% if current_user?(feed_item.user) %>
    <%= link_to "delete", feed_item, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: feed_item.title %>
  <% end %>
</li>