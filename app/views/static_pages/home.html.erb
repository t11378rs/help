<% if signed_in? %>
  <div class="row left">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/helppost_form' %>
      </section>
    </aside>
  </div>
  <div class="span8 right" >
      <h3>今投稿されているHELP！</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to HELP!</h1>

    <h2>
    This is the webservice for the asking help! for everyone in SFC
    </h2>

    <%= link_to "Sign up now!", signup_path,
                                class: "btn btn-large btn-primary" %>
  </div>

  <%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %>
<% end %>